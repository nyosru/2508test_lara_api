    "components": {
        "schemas": {
            "ApiKeyCreateRequest": {
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "description": "Описание для нового API ключа (например, 'Ключ для тестирования')",
                        "type": "string",
                        "example": "Ключ для тестирования"
                    }
                },
                "type": "object"
            },
            "ApiKeyCreateResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "API ключ успешно создан"
                    },
                    "api_key": {
                        "description": "Сгенерированный API ключ",
                        "type": "string",
                        "example": "XyZ123ABcdEfG456HiJ789KlMnoPqRsTuvWxYz0123456789abcdefghijklmn"
                    },
                    "id": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "ApiKey": {
                "properties": {
                    "name": {
                        "description": "название",
                        "type": "string",
                        "example": "первый ключ"
                    },
                    "api_key": {
                        "description": "API ключ",
                        "type": "string",
                        "example": "XyZ123ABcdEfG456HiJ789KlMnoPqRsTuvWxYz0123456789abcdefghijklmn"
                    },
                    "id": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "Organization": {
                "title": "Организация",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "ООО Рога и Копыта"
                    },
                    "building": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 1
                            },
                            "address": {
                                "type": "string",
                                "example": "г. Москва, ул. Ленина 1, офис 3"
                            },
                            "latitude": {
                                "type": "number",
                                "format": "float",
                                "example": 55.7558
                            },
                            "longitude": {
                                "type": "number",
                                "format": "float",
                                "example": 37.6173
                            }
                        },
                        "type": "object"
                    },
                    "phones": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "8-923-666-13-13"
                        }
                    },
                    "activities": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "Молочная продукция"
                        }
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "name": "X-API-KEY",
                "in": "header"
            }
        }
    },
