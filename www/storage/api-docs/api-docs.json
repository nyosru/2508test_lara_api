        "/api/organization/by-location": {
            "post": {
                "tags": [
                    "Организации"
                ],
                "summary": "Получить организации по местоположению здания в квадрате вокруг точки",
                "description": "Возвращает организации, чьи здания находятся в квадрате вокруг указанной гео-точки с заданным радиусом (в километрах)",
                "operationId": "b2bd7e3b2775d488d25aa689f64f1ad5",
                "requestBody": {
                    "description": "Координаты точки и радиус",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "latitude",
                                    "longitude",
                                    "radiusKm"
                                ],
                                "properties": {
                                    "latitude": {
                                        "description": "Широта в градусах",
                                        "type": "number",
                                        "format": "float",
                                        "example": 55.751244
                                    },
                                    "longitude": {
                                        "description": "Долгота в градусах",
                                        "type": "number",
                                        "format": "float",
                                        "example": 37.618423
                                    },
                                    "radiusKm": {
                                        "description": "Радиус квадрата в километрах",
                                        "type": "number",
                                        "format": "float",
                                        "example": 5
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Список организаций в указанном квадрате",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Organization"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Ошибка валидации",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "latitude": [
                                                    "The latitude field is required."
                                                ],
                                                "longitude": [
                                                    "The longitude field is required."
                                                ],
                                                "radiusKm": [
                                                    "The radiusKm field is required."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ]
            }
        },
